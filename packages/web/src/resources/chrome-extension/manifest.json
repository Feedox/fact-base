{
	"name": "savee extension",
	"version": "2.7",
	"description": "Provides a response to posts containing holocaust denial",
	"manifest_version": 3,
	"icons": {
		"16": "savee_logo.png",
		"48": "savee_logo.png",
		"128": "savee_logo.png"
	},
	"permissions": ["contextMenus", "storage"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_title": "Savee",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "savee_logo.png",
			"48": "savee_logo.png",
			"128": "savee_logo.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://*.facebook.com/*", "https://*.instagram.com/*", "https://*.twitter.com/*"],
			"js": ["libs/libx.min.js", "content.js"]
		}
	],
	"externally_connectable": {
		"matches": ["http://localhost:3012/*", "https://savee-ai.web.app/*", "https://saveeai.com/*", "https://app.saveeai.com/*"]
	}
}
